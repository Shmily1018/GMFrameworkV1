

@model ModelSAUserIndex
@{
    ViewBag.Title = "SampleDialog";
    Layout = "~/Views/Shared/_GmLayoutSelectDialog.cshtml";
}


@section QueryConditionArea
{
    <div class="form-group">
        <div class="col-sm-6">
            <label class="col-sm-4 control-label  ">员工工号：</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.SearchEntity.JobCode, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-sm-6">
            <label class="col-sm-4 control-label">员工姓名：</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.SearchEntity.UserName, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-6">
            <label class="col-sm-4 control-label  ">手机：</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.SearchEntity.Mobile, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-sm-6">
            <label class="col-sm-4 control-label">邮箱：</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(x => x.SearchEntity.Email, new { @class = "form-control" })
            </div>
        </div>
    </div>
}


@section SelectScriptsPlaceHolder
{
    <script>
        Dialog.commonContent = '员工工号、员工姓名、手机、邮箱';
    </script>
}


