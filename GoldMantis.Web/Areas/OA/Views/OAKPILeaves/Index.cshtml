@model ModelVW_OAKPILeavesIndex
@{
    ViewBag.Title = "SampleMaintain";
    Layout = "~/Views/Shared/_GmLayoutMaintain.cshtml";
}

@section QueryConditionArea
{
    <div class="form-group">
        <div class="col-sm-4">
            <label class="col-sm-4 control-label">编号：</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(new TextBoxAttribute<ModelVW_OAKPILeavesIndex, string>(x => x.SearchEntity.Code))
            </div>
        </div>
        <div class="col-sm-4">
            <label class="col-sm-4 control-label  ">员工：</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(new TextBoxAttribute<ModelVW_OAKPILeavesIndex, string>(x => x.SearchEntity.UserName))
            </div>
        </div>

        <div class="col-sm-4">
            <label class="col-sm-4 control-label">所在部门：</label>
            <div class="col-sm-8">
                @Html.TextBoxFor(new TextBoxAttribute<ModelVW_OAKPILeavesIndex, string>(x => x.SearchEntity.DeptName))
            </div>
        </div>

    </div>
    <div class="form-group">
        <div>
            <div class="col-sm-4">
                <label class="col-sm-4 control-label">请假类型：</label>
                <div class="col-sm-8">
                    @Html.DropDownListFor(x => x.SearchEntity.LeaveType, Model.LeavesTypeList, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-4">
                <label class="col-sm-4 control-label">请假天数：</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(new TextBoxAttribute<ModelVW_OAKPILeavesIndex,int?>(x => x.SearchEntity.Days))
                </div>
            </div>
            <div class="col-sm-4">
                <label class="col-sm-4 control-label">请假原因：</label>
                <div class="col-sm-8">
                    @Html.TextBoxFor(new TextBoxAttribute<ModelVW_OAKPILeavesIndex, string>(x => x.SearchEntity.Reason))
                </div>
            </div>
        </div>
    </div>
}


@section MaintainScriptsPlaceHolder
{
    <script>
        Maintain.commonContent = '员工、编号、所在部门、请假原因';
        Maintain.editUrl = 'OA/OAKPILeaves/Create';
        Maintain.deleteUrl = 'OA/OAKPILeaves/Delete';
        //Maintain.actionAdd = function() {
        //    window.top.menu.addTabs("新增员工请假", this.editUrl);
        //};
    </script>
}

