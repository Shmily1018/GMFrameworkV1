@section EditScriptsPlaceHolder
{

    $(document).ready(function () {
        $(".row:even").css('background-color', '#F9F9F9');


        $("#btnUnSubmit").bind('click',function(){
            $.ajax({
                type: "POST",
                url: '@Url.Content("~/" + @Model.SubmitPrefix + "/UnSubmit")',
                data: {
                    keyID:'@Model.KeyID'
                }
            });
        });
    });


}


