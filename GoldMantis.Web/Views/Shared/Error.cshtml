@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="@Url.Content("~/Scripts/assets/admin/pages/css/error.css")" rel="stylesheet" type="text/css" />

<div class="container">
    <!-- BEGIN CONTAINER -->
    <div class="page-container">
        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
            <div class="page-content" style="min-height:500px">
                <!-- BEGIN PAGE CONTENT-->
                <div class="row">
                    <div class="col-md-12 page-500">
                        <div class="number">
                            500
                        </div>
                        <div class="details">
                            <h3>执行出错，请联系管理员。</h3>

                            @{
                                string msg = ((HandleErrorInfo)ViewData.Model).Exception.Message;

                                <div>@msg</div>
                            }

                            <p>
                                <br>
                                <a onclick="window.top.location = window.top.location">
                                    回到主页
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                <!-- END PAGE CONTENT-->
            </div>
            <!-- BEGIN CONTENT -->
        </div>
        <!-- END CONTENT -->

    </div>
    <!-- END CONTAINER -->
</div>
